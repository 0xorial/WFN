<Window x:Class="Notifier2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:notifier2="clr-namespace:Notifier2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="MainWindow_OnLoaded"
        d:DataContext="{d:DesignInstance notifier2:MainWindowVM}" WindowStyle="None">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Port}" />
            <TextBlock Text="{Binding TotalEvents}" />
        </StackPanel>
    </Grid>
</Window>